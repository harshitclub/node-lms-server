{
    "name": "backend",
    "version": "1.0.0",
    "description": "Learning Management System (LMS) backend [Node.js, Express, TypeScript]",
    "main": "src/server.js",
    "scripts": {
        "dist": "npx tsc",
        "dev": "cross-env NODE_ENV=development nodemon --legacy-watch src/server.ts",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix",
        "init:prisma": "npx prisma init",
        "migratedev:prisma": "dotenv -e .env.development -- npx prisma migrate dev",
        "migrateprod:prisma": "dotenv -e .env.production -- npx prisma migrate dev",
        "generate:prisma": "npx prisma generate"
    },
    "author": "Harshit Kumar",
    "license": "ISC",
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@eslint/js": "^9.17.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^4.17.17",
        "@types/node": "^22.10.5",
        "@types/source-map-support": "^0.5.10",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.3.0",
        "nodemon": "^3.1.9",
        "prettier": "3.4.2",
        "prisma": "^6.2.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.19.1"
    },
    "dependencies": {
        "@prisma/client": "^6.2.0",
        "bcryptjs": "^2.4.3",
        "colorette": "^2.0.20",
        "compression": "^1.7.5",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^8.0.0",
        "dotenv-flow": "^4.1.0",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.0.0",
        "jsonwebtoken": "^9.0.2",
        "source-map-support": "^0.5.21",
        "winston": "^3.17.0",
        "zod": "^3.24.1"
    }
}
